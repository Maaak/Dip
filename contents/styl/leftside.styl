@import "nib"





#left-side
	height: 100%
	position: absolute
	left: 0px
	
	color: #8B8B8B
	background-color: #343434
	box-shadow: 0px 0px 20px 3px rgba(0, 0, 0, 1)
	
	z-index: 1000
	

	div
		padding: .5rem 1rem
		border-bottom: 1px solid #3F3F3F
		font-size: .8rem
		transition: background-color .08s linear
		cursor: pointer
		
		&:hover
			background-color: rgba(255, 255, 255, 0.08)