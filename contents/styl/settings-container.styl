@import "nib"


HeaderHeight = 2


#settings-container
	width: 10rem
	height: 20rem
	position: absolute
	padding-top: HeaderHeight rem
	right: 0px
	bottom: 0px
	border-radius: 3px
	transform: translate3d(0,0,0)
	transition: all .128s linear
	
	background-color: #fff
	box-shadow: 2px 2px 5px 1px rgba(0,0,0,0.53)
	overflow: hidden
	

	.header
		width: 100%
		height: HeaderHeight rem
		position: absolute
		top: 0px
		left: 0px
		border-bottom: 1px solid #6B6B6B
		background-color: #252222
		
	.body
		width: 100%
		height: 100%
		position: relative
		overflow: hidden
		overflow-y: auto
		
		