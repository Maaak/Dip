@import "nib"





#right-side
	height: 100%
	position: relative
	overflow: hidden
	background-color: #BB5335
	
	#map
		min-width: 5rem
		max-width: 50rem
		position: absolute
		top: 1rem
		left: 0rem
		right: 0rem
		margin: auto
		z-index: 100
		
		#map-input
			width: 100%
			height: 2rem
			padding: 0 1rem
			outline: none
			border: none
			border-radius: 2px		
			color: #7B3420
			font-weight: 600
			box-shadow: 0 0 50px 1px rgba(0, 0, 0, 0.53)
	

	#scene
		width: 50rem
		height: 30rem
		position: absolute
		margin: auto
		top: 0px
		left: 0px
		right: 0px
		bottom: 0px
		overflow: hidden	
		